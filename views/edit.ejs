<%- include("partials/header.ejs") %>
<div class="entry_details">
    <form action="/edit_enter" method="post" class="entry_form">
        <% if (locals.editData) { %>
            <h2 style="color: antiquewhite;">Edit Parking: <%=editData.rows[0].parking_no%></h2>
            <input type="text" name="name" class="entries" placeholder="Owner Name" autocomplete="off" value="<%= editData.rows[0].owner_name %>" >
            <hr width="90%" style="margin-left: 5%;">
            <input type="text" name="vehicle_no" class="entries" placeholder="Vehicle Number" autocomplete="off" value="<%= editData.rows[0].vehicle_no %>">
            <hr width="90%" style="margin-left: 5%;">
            <input type="text" name="company" class="entries" placeholder="Vehicle Name" autocomplete="off" value="<%= editData.rows[0].vehicle_company %>">
            <hr width="90%" style="margin-left: 5%;">
            <% if (locals.getError) { %>
                <h4 style="margin-top: 5%; color: red;">Error: <%= getError %></h4>
            <% } %>
            <button type="submit" class="entry_btn">Enter</button>
        <% } %>
    </form>
</div>
<div class="data_show"></div>
<%- include("partials/footer.ejs") %>
